#compdef dpmanip
function _dpmanip-filter_node_type (){
    typeset -A opt_args
    local context state line

    _arguments -w -s -S \
        '(-h --help)'{-h,--help}'[show this help message and exit]' \
        '*::arguments:_files'
}


